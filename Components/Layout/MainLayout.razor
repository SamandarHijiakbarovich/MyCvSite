@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@implements IDisposable

<div class="layout-wrapper" data-theme="@(isDarkTheme ? "dark" : "light")">
    <!-- Sidebar -->
    <aside class="sidebar @(isSidebarCollapsed ? "collapsed" : "")">
        <div class="sidebar-header">
            <div class="profile-section">
                <img src="images/my-photo.jpg" alt="Samandar Mamasoatov" class="sidebar-profile"
                     onerror="this.src='https://via.placeholder.com/120x120/6366f1/8b5cf6?text=SM'" />
                <div class="profile-info">
                    <h3>Samandar Mamasoatov</h3>
                    <p>.NET Full-Stack Developer</p>
                    <div class="profile-badges">
                        <span class="badge">🚀 Blazor</span>
                        <span class="badge">🔒 Security</span>
                    </div>
                </div>
            </div>

            <!-- Sidebar social links -->
            <div class="sidebar-social-links">
                <a href="https://github.com/samandarHijiakbarovich" target="_blank" class="social-btn github" title="GitHub">
                    <i class="fab fa-github"></i>
                    <span class="tooltip">GitHub</span>
                </a>
                <a href="https://linkedin.com/in/samandarmamasoatovcyberlab" target="_blank" class="social-btn linkedin" title="LinkedIn">
                    <i class="fab fa-linkedin"></i>
                    <span class="tooltip">LinkedIn</span>
                </a>
                <a href="https://t.me/LinuxInstructor" target="_blank" class="social-btn telegram" title="Telegram">
                    <i class="fab fa-telegram"></i>
                    <span class="tooltip">Telegram</span>
                </a>
                <a href="mailto:mamasoatovsamandar5@gmail.com" class="social-btn email" title="Email">
                    <i class="fas fa-envelope"></i>
                    <span class="tooltip">Email</span>
                </a>
            </div>
        </div>

        <!-- Navigation Menu -->
        <NavMenu />

        <!-- Sidebar Footer -->
        <div class="sidebar-footer">
            <div class="status-card">
                <div class="status-info">
                    <div class="current-time">
                        <i class="fas fa-clock"></i>
                        <span id="current-time">@currentTime</span>
                    </div>
                    <div class="status-indicator online">
                        <div class="pulse"></div>
                        <span>Online</span>
                    </div>
                </div>
                <button class="collapse-btn" @onclick="ToggleSidebar" title="@(isSidebarCollapsed ? "Expand" : "Collapse")">
