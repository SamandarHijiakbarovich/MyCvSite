                </button>
            </div>
        </div>
    </aside>

    <!-- Main content -->
    <main class="main-content @(isSidebarCollapsed ? "expanded" : "")">
        <!-- Top navigation -->
        <nav class="top-nav">
            <div class="nav-container">
                <div class="nav-start">
                    <button class="nav-toggle" @onclick="ToggleSidebar">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="page-info">
                        <h1 class="page-title">@(GetCurrentPageTitle())</h1>
                        <p class="page-subtitle">@(GetCurrentPageSubtitle())</p>
                    </div>
                </div>

                <div class="nav-end">
                    <!-- Theme Toggle -->
                    <button class="nav-btn theme-toggle" @onclick="ToggleTheme" title="Toggle Theme">
                        <i class="fas @(isDarkTheme ? "fa-sun" : "fa-moon")"></i>
                    </button>

                    <!-- Notification Bell -->
                    <div class="nav-btn notification-btn">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge">3</span>
                        <div class="notification-dropdown">
                            <div class="notification-item">
                                <i class="fas fa-code-branch text-primary"></i>
                                <div class="notification-content">
                                    <span>Yangi loyiha</span>
                                    <small>5 daqiqa oldin</small>
                                </div>
                            </div>
                            <div class="notification-item">
                                <i class="fas fa-heart text-danger"></i>
                                <div class="notification-content">
                                    <span>Like qoldirildi</span>
                                    <small>1 soat oldin</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="nav-links">
                        <a href="https://github.com/samandarHijiakbarovich" target="_blank" class="nav-link" title="GitHub">
                            <i class="fab fa-github"></i>
                        </a>
                        <a href="https://t.me/LinuxInstructor" target="_blank" class="nav-link" title="Telegram">
                            <i class="fab fa-telegram"></i>
                        </a>
                        <button class="nav-link download-btn" title="CV Yuklab olish">
                            <i class="fas fa-download"></i>
                        </button>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Page content -->
        <section class="content-area">
            <div class="content-container">
                @Body
            </div>
        </section>

        <!-- Footer -->
        <footer class="main-footer">
            <div class="footer-container">
                <div class="footer-content">
                    <div class="footer-copyright">
                        <p>&copy; 2024 Samandar Mamasoatov. <span class="highlight">Barcha huquqlar himoyalangan</span> 🛡️</p>
                    </div>
                    <div class="footer-tech">
                        <div class="tech-stack">
                            <span>Built with</span>
                            <i class="fas fa-heart pulse"></i>
                            <span>using</span>
                            <span class="tech-tag">Blazor</span>
                            <span class="tech-tag">.NET 8</span>
                            <span class="tech-tag">C#</span>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </main>
</div>

<style>
    /* === VARIABLES === */
    :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --secondary: #8b5cf6;
        --accent: #06b6d4;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --dark: #1e293b;
        --light: #f8fafc;
        --gray: #64748b;
        --border: #e2e8f0;
        --card-bg: #ffffff;
        --sidebar-width: 300px;
        --sidebar-collapsed: 80px;
        --shadow: 0 8px 25px -8px rgba(99, 102, 241, 0.15);
        --shadow-lg: 0 20px 40px -10px rgba(0, 0, 0, 0.15);
        --gradient: linear-gradient(135deg, var(--primary), var(--secondary));
        --radius: 14px;
        --transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    [data-theme="dark"] {
        --light: #0f172a;
        --dark: #f8fafc;
        --card-bg: #1e293b;
        --border: #334155;
        --gray: #94a3b8;
        --shadow: 0 8px 25px -8px rgba(0, 0, 0, 0.3);
        --shadow-lg: 0 20px 40px -10px rgba(0, 0, 0, 0.4);
    }

    /* === LAYOUT === */
    .layout-wrapper {
        display: flex;
        min-height: 100vh;
        background: var(--light);
        transition: var(--transition);
    }

    /* === SIDEBAR === */
    .sidebar {
        width: var(--sidebar-width);
        background: var(--card-bg);
        border-right: 1px solid var(--border);
        height: 100vh;
        position: fixed;
        left: 0;
        top: 0;
        z-index: 1000;
        display: flex;
        flex-direction: column;
        transition: var(--transition);
        box-shadow: var(--shadow);
    }

        .sidebar.collapsed {
            width: var(--sidebar-collapsed);
        }

    .sidebar-header {
        padding: 1.5rem 1.25rem 1.25rem;
        border-bottom: 1px solid var(--border);
    }

    .profile-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 0.75rem;
    }

    .sidebar-profile {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        border: 3px solid var(--primary);
        padding: 2px;
        background: var(--gradient);
        transition: var(--transition);
    }

    .sidebar.collapsed .sidebar-profile {
        width: 45px;
        height: 45px;
    }

    .profile-info h3 {
        color: var(--dark);
        font-size: 1.1rem;
        font-weight: 700;
        margin: 0;
        background: var(--gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .profile-info p {
        color: var(--gray);
        font-size: 0.8rem;
        margin: 0.2rem 0 0.5rem;
    }

    .profile-badges {
        display: flex;
        gap: 0.4rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    .badge {
        background: var(--gradient);
        color: white;
        padding: 0.2rem 0.6rem;
        border-radius: 12px;
        font-size: 0.7rem;
        font-weight: 600;
    }

    .sidebar.collapsed .profile-info,
    .sidebar.collapsed .profile-badges {
        display: none;
    }

    /* === SOCIAL LINKS === */
    .sidebar-social-links {
        display: flex;
        justify-content: center;
        gap: 0.6rem;
        margin-top: 1rem;
    }

    .social-btn {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-decoration: none;
        transition: var(--transition);
        position: relative;
        overflow: hidden;
    }

        .social-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .social-btn:hover::before {
            left: 100%;
        }

        .social-btn.github {
            background: #333;
        }

        .social-btn.linkedin {
            background: #0077b5;
        }

        .social-btn.telegram {
            background: #0088cc;
        }

        .social-btn.email {
            background: var(--primary);
        }

        .social-btn:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow);
        }

    .tooltip {
        position: absolute;
        top: -35px;
        left: 50%;
        transform: translateX(-50%);
        background: var(--dark);
        color: var(--light);
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        font-size: 0.75rem;
        white-space: nowrap;
        opacity: 0;
        visibility: hidden;
        transition: var(--transition);
    }

    .social-btn:hover .tooltip {
        opacity: 1;
        visibility: visible;
        top: -30px;
    }

    .sidebar.collapsed .sidebar-social-links {
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

    /* === SIDEBAR FOOTER === */
    .sidebar-footer {
        margin-top: auto;
        padding: 1.25rem;
        border-top: 1px solid var(--border);
    }

    .status-card {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .status-info {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
    }

    .current-time {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--gray);
        font-size: 0.8rem;
    }

    .status-indicator {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--success);
        font-size: 0.8rem;
        font-weight: 600;
    }

    .pulse {
        width: 6px;
        height: 6px;
        background: var(--success);
        border-radius: 50%;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% {
            transform: scale(0.95);
            box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7);
        }

        70% {
            transform: scale(1);
            box-shadow: 0 0 0 6px rgba(16, 185, 129, 0);
        }

        100% {
            transform: scale(0.95);
            box-shadow: 0 0 0 0 rgba(16, 185, 129, 0);
        }
    }

    .collapse-btn {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: var(--card-bg);
        color: var(--gray);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: var(--transition);
        cursor: pointer;
        font-size: 0.8rem;
    }

        .collapse-btn:hover {
            background: var(--primary);
            color: white;
            transform: rotate(180deg);
        }

    .sidebar.collapsed .status-info {
        display: none;
    }

    .sidebar.collapsed .collapse-btn {
        margin: 0 auto;
    }

    /* === MAIN CONTENT === */
    .main-content {
        flex: 1;
        margin-left: var(--sidebar-width);
        transition: var(--transition);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

        .main-content.expanded {
            margin-left: var(--sidebar-collapsed);
        }

    /* === TOP NAVIGATION === */
    .top-nav {
        background: var(--card-bg);
        border-bottom: 1px solid var(--border);
        padding: 0.875rem 0;
        backdrop-filter: blur(10px);
        position: sticky;
        top: 0;
        z-index: 999;
    }

    .nav-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .nav-start {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .nav-toggle {
        width: 36px;
        height: 36px;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: var(--card-bg);
        color: var(--gray);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: var(--transition);
        cursor: pointer;
        font-size: 0.9rem;
    }

        .nav-toggle:hover {
            background: var(--primary);
            color: white;
            transform: scale(1.05);
        }

    .page-title {
        color: var(--dark);
        font-size: 1.3rem;
        font-weight: 700;
        margin: 0;
        background: var(--gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .page-subtitle {
        color: var(--gray);
        font-size: 0.8rem;
        margin: 0.2rem 0 0;
    }

    .nav-end {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .nav-btn {
        width: 36px;
        height: 36px;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: var(--card-bg);
        color: var(--gray);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: var(--transition);
        cursor: pointer;
        position: relative;
        font-size: 0.9rem;
    }

        .nav-btn:hover {
            background: var(--primary);
            color: white;
            transform: translateY(-1px);
        }

    .notification-btn {
        position: relative;
    }

    .notification-badge {
        position: absolute;
        top: -4px;
        right: -4px;
        background: var(--danger);
        color: white;
        border-radius: 50%;
        width: 16px;
        height: 16px;
        font-size: 0.65rem;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-3px);
        }

        60% {
            transform: translateY(-2px);
        }
    }

    .notification-dropdown {
        position: absolute;
        top: 100%;
        right: 0;
        width: 280px;
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow-lg);
        padding: 0.875rem;
        opacity: 0;
        visibility: hidden;
        transform: translateY(-8px);
        transition: var(--transition);
    }

    .notification-btn:hover .notification-dropdown {
        opacity: 1;
        visibility: visible;
        transform: translateY(4px);
    }

    .notification-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem;
        border-radius: 8px;
        transition: var(--transition);
    }

        .notification-item:hover {
            background: var(--light);
        }

    .notification-content {
        flex: 1;
    }

        .notification-content span {
            display: block;
            color: var(--dark);
            font-weight: 600;
            font-size: 0.85rem;
        }

        .notification-content small {
            color: var(--gray);
            font-size: 0.75rem;
        }

    .nav-links {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .nav-link {
        width: 36px;
        height: 36px;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: var(--card-bg);
        color: var(--gray);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: var(--transition);
        text-decoration: none;
        font-size: 0.9rem;
    }

        .nav-link:hover {
            background: var(--primary);
            color: white;
            transform: translateY(-1px);
        }

    .download-btn {
        background: var(--gradient) !important;
        color: white !important;
        border: none !important;
    }

    /* === CONTENT AREA === */
    .content-area {
        flex: 1;
        padding: 1.5rem 0;
    }

    .content-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    /* === FOOTER === */
    .main-footer {
        background: var(--card-bg);
        border-top: 1px solid var(--border);
        padding: 1.5rem 0;
        margin-top: auto;
    }

    .footer-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .footer-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .footer-copyright p {
        color: var(--gray);
        margin: 0;
        font-size: 0.85rem;
    }

    .highlight {
        background: var(--gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 600;
    }

    .tech-stack {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--gray);
        font-size: 0.85rem;
    }

    .tech-tag {
        background: var(--gradient);
        color: white;
        padding: 0.2rem 0.6rem;
        border-radius: 10px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    /* === RESPONSIVE DESIGN === */
    @@media (max-width: 1024px) {
        .sidebar {
            transform: translateX(-100%);
        }

            .sidebar.active {
                transform: translateX(0);
            }

        .main-content {
            margin-left: 0 !important;
        }

        .nav-toggle {
            display: flex !important;
        }
    }

    @@media (max-width: 768px) {
        .nav-container {
            padding: 0 1rem;
        }

        .content-container {
            padding: 0 1rem;
        }

        .footer-content {
            flex-direction: column;
            gap: 0.75rem;
            text-align: center;
        }

        .page-title {
            font-size: 1.1rem;
        }

        .footer-container {
            padding: 0 1rem;
        }
    }

    /* === DARK THEME ENHANCEMENTS === */
    [data-theme="dark"] .sidebar,
    [data-theme="dark"] .top-nav,
    [data-theme="dark"] .main-footer {
        backdrop-filter: blur(20px);
        background: rgba(30, 41, 59, 0.9);
    }

    /* === SMOOTH SCROLL === */
    html {
        scroll-behavior: smooth;
    }

    /* === CUSTOM SCROLLBAR === */
    ::-webkit-scrollbar {
        width: 6px;
    }

    ::-webkit-scrollbar-track {
        background: var(--light);
    }

    ::-webkit-scrollbar-thumb {
        background: var(--gradient);
        border-radius: 3px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: var(--primary-dark);
        }
</style>

@code {
    private string currentTime = "";
    private Timer? timer;
    private bool isSidebarCollapsed = false;
    private bool isDarkTheme = false;

    protected override void OnInitialized()
    {
        UpdateTime();
        timer = new Timer(_ =>
        {
            InvokeAsync(() =>
            {
                UpdateTime();
                StateHasChanged();
            });
        }, null, 0, 30000);

        var hour = DateTime.Now.Hour;
        isDarkTheme = hour < 6 || hour > 18;
    }

    private void UpdateTime()
    {
        currentTime = DateTime.Now.ToString("HH:mm");
    }

    private void ToggleSidebar()
    {
        isSidebarCollapsed = !isSidebarCollapsed;
    }

    private void ToggleTheme()
    {
        isDarkTheme = !isDarkTheme;
    }

    private string GetCurrentPageTitle()
    {
        var uri = NavigationManager.Uri.ToLower();
        if (uri.Contains("/projects")) return "🚀 Mening Loyihalarim";
        if (uri.Contains("/about")) return "👨‍💻 Men Haqimda";
        if (uri.Contains("/contact")) return "📞 Aloqa";
        return "🏠 Bosh Sahifa";
    }

    private string GetCurrentPageSubtitle()
    {
        var uri = NavigationManager.Uri.ToLower();
        if (uri.Contains("/projects")) return "Yaratilgan loyihalar va ishlar portfoliosi";
        if (uri.Contains("/about")) return "Shaxsiy ma'lumotlar va texnik ko'nikmalar";
        if (uri.Contains("/contact")) return "Bog'lanish va xabar yuborish";
        return "Shaxsiy portfolio va blog platformasi";
    }

    public void Dispose()
    {
        timer?.Dispose();
    }
}