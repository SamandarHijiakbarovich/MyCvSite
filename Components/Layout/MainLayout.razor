@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Routing
@* 1. Navigatsiya xizmatini ulash *@
@inject NavigationManager NavigationManager

<div class="page-container">
    @* --- ORQA FON EFFEKTI --- *@
    <div class="bg-visuals">
        <div class="glow-orb orb-1"></div>
        <div class="glow-orb orb-2"></div>
    </div>

    @* === 1. PREMIUM SIDEBAR === *@
    <aside class="sidebar @(IsCollapsed ? "collapsed" : "")">
        <div class="sidebar-header">
            <div class="brand-wrapper">
                <div class="logo-box">
                    <span class="logo-text">SM</span>
                    <div class="logo-orb"></div>
                </div>
                @if (!IsCollapsed)
                {
                    <div class="brand-details">
                        <span class="brand-name">SAMANDAR</span>
                        <div class="status-indicator">
                            <span class="pulse-dot"></span>
                            <span class="status-text">SYSTEM ONLINE</span>
                        </div>
                    </div>
                }
            </div>
        </div>

        <nav class="nav-container">
            <div class="nav-group">
                @if (!IsCollapsed)
                {
                    <p class="group-label">ASOSIY MENYU</p>
                }

                <NavLink href="" class="nav-card" Match="NavLinkMatch.All">
                    <div class="nav-card-inner">
                        <div class="nav-icon"><i class="fas fa-th-large"></i></div>
                        @if (!IsCollapsed)
                        {
                            <div class="nav-info">
                                <span class="nav-title">Bosh Sahifa</span>
                                <span class="nav-desc">Tizim nazorati</span>
                            </div>
                        }
                    </div>
                </NavLink>

                <NavLink href="about" class="nav-card">
                    <div class="nav-card-inner">
                        <div class="nav-icon"><i class="fas fa-user-ninja"></i></div>
                        @if (!IsCollapsed)
                        {
                            <div class="nav-info">
                                <span class="nav-title">Men Haqimda</span>
                                <span class="nav-desc">Bio va tajriba</span>
                            </div>
                        }
                    </div>
                </NavLink>

                <NavLink href="projects" class="nav-card">
                    <div class="nav-card-inner">
                        <div class="nav-icon"><i class="fas fa-project-diagram"></i></div>
                        @if (!IsCollapsed)
                        {
                            <div class="nav-info">
                                <span class="nav-title">Loyihalarim</span>
                                <span class="nav-desc">Portfolio</span>
                            </div>
                        }
                    </div>
                </NavLink>

                <NavLink href="skills" class="nav-card">
                    <div class="nav-card-inner">
                        <div class="nav-icon"><i class="fas fa-microchip"></i></div>
                        @if (!IsCollapsed)
                        {
                            <div class="nav-info">
                                <span class="nav-title">Ko'nikmalar</span>
                                <span class="nav-desc">Tech stack</span>
                            </div>
                        }
                    </div>
                </NavLink>

                @* Aloqa tugmasi NavigationManager orqali *@
                <button class="nav-card btn-link-style" @onclick="@(() => NavigationManager.NavigateTo("/contact"))">
                    <div class="nav-card-inner">
                        <div class="nav-icon"><i class="fas fa-satellite-dish"></i></div>
                        @if (!IsCollapsed)
                        {
                            <div class="nav-info">
                                <span class="nav-title">Aloqa</span>
                                <span class="nav-desc">Bog'lanish</span>
                            </div>
                        }
                    </div>
                </button>
            </div>
        </nav>

        <div class="sidebar-bottom">
            <div class="version-tag">
                @if (!IsCollapsed)
                {
                    <div class="v-pill">CORE v2.5</div>
                }
                <div class="v-status">STABLE</div>
            </div>
        </div>
    </aside>

    @* === 2. ASOSIY KONTENT AREA === *@
    <main class="main-content">
        @* TOP NAVIGATION BAR *@
        <header class="top-bar">
            <div class="breadcrumb">
                <button class="toggle-btn" @onclick="ToggleSidebar">
                    <i class="fas fa-bars"></i>
                </button>
                <span class="b-root">System</span>
                <i class="fas fa-chevron-right"></i>
                <span class="b-active">Terminal</span>
            </div>
            <div class="top-actions">
                <div class="action-btn"><i class="fas fa-search"></i></div>
                <div class="action-btn"><i class="fas fa-bell"></i><span class="badge"></span></div>
                <div class="user-profile">
                    <img src="https://api.dicebear.com/7.x/avataaars/svg?seed=Samandar" alt="User" />
                </div>
            </div>
        </header>

        <div class="content-wrapper">
            <div class="glass-container">
                @Body
            </div>
        </div>
    </main>
</div>

<style>
    :root {
        --side-w: 300px;
        --c-bg: #030712;
        --c-side: rgba(11, 15, 26, 0.95);
        --c-accent: #6366f1;
        --c-accent-glow: rgba(99, 102, 241, 0.4);
        --c-text: #f9fafb;
        --c-subtext: #94a3b8;
        --glass: rgba(255, 255, 255, 0.03);
        --border: rgba(255, 255, 255, 0.08);
        --grad: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
        --trans: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .bg-visuals {
        position: fixed;
        inset: 0;
        z-index: -1;
        overflow: hidden;
        background: var(--c-bg);
    }

    .glow-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        opacity: 0.15;
    }

    .orb-1 {
        width: 500px;
        height: 500px;
        background: var(--c-accent);
        top: -100px;
        right: -100px;
    }

    .orb-2 {
        width: 400px;
        height: 400px;
        background: #a855f7;
        bottom: -100px;
        left: -100px;
    }

    .page-container {
        display: flex;
        min-height: 100vh;
    }

    .sidebar {
        width: var(--side-w);
        height: 100vh;
        background: var(--c-side);
        position: fixed;
        border-right: 1px solid var(--border);
        display: flex;
        flex-direction: column;
        z-index: 100;
        backdrop-filter: blur(10px);
        transition: var(--trans);
    }

        .sidebar.collapsed {
            width: 85px;
        }

    .sidebar-header {
        padding: 2rem 1.5rem;
    }

    .brand-wrapper {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px;
        background: rgba(255,255,255,0.02);
        border-radius: 20px;
        border: 1px solid var(--border);
    }

    .logo-box {
        width: 48px;
        height: 48px;
        min-width: 48px;
        background: var(--grad);
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .logo-text {
        font-weight: 900;
        font-size: 1.2rem;
        color: white;
    }

    .nav-container {
        flex: 1;
        padding: 0 1rem;
    }

    .group-label {
        font-size: 0.65rem;
        color: var(--c-subtext);
        letter-spacing: 2px;
        margin: 1.5rem 0.5rem 0.75rem;
    }

    .nav-card {
        text-decoration: none;
        display: block;
        margin-bottom: 8px;
        border: none;
        background: none;
        width: 100%;
        cursor: pointer;
        padding: 0;
    }

    .nav-card-inner {
        display: flex;
        align-items: center;
        padding: 12px;
        border-radius: 15px;
        transition: var(--trans);
        border: 1px solid transparent;
    }

    .nav-icon {
        width: 38px;
        height: 38px;
        min-width: 38px;
        background: var(--glass);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--c-subtext);
        font-size: 1.1rem;
        margin-right: 12px;
        transition: 0.3s;
    }

    .collapsed .nav-icon {
        margin-right: 0;
    }

    .nav-title {
        display: block;
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--c-text);
        text-align: left;
    }

    .nav-desc {
        display: block;
        font-size: 0.7rem;
        color: var(--c-subtext);
        opacity: 0.6;
        text-align: left;
    }

    .nav-card:hover .nav-card-inner {
        background: var(--glass);
        transform: translateX(5px);
    }

    .nav-card.active .nav-card-inner {
        background: rgba(99, 102, 241, 0.1);
        border-left: 3px solid var(--c-accent);
    }

    .nav-card.active .nav-icon {
        background: var(--grad);
        color: white;
        box-shadow: 0 0 15px var(--c-accent-glow);
    }

    .top-bar {
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 3rem;
        background: rgba(3, 7, 18, 0.5);
        backdrop-filter: blur(10px);
        position: sticky;
        top: 0;
        z-index: 90;
        border-bottom: 1px solid var(--border);
    }

    .main-content {
        flex: 1;
        margin-left: var(--side-w);
        transition: var(--trans);
    }

    .sidebar.collapsed + .main-content {
        margin-left: 85px;
    }

    .toggle-btn {
        background: none;
        border: none;
        color: white;
        cursor: pointer;
        margin-right: 15px;
        font-size: 1.2rem;
    }

    .glass-container {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--border);
        border-radius: 30px;
        padding: 2.5rem;
        min-height: 80vh;
        backdrop-filter: blur(5px);
        animation: fadeIn 0.8s ease-out;
    }

    /* Ikkitalik @@ Razor uchun */
    @@keyframes rotateOrb {
        from {
            transform: rotate(0);
        }

        to {
            transform: rotate(360deg);
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 1024px) {
        .sidebar {
            width: 85px;
        }

        .main-content {
            margin-left: 85px;
        }

        .brand-details, .nav-info, .group-label, .v-pill, .breadcrumb span {
            display: none;
        }
    }
</style>

@code {
    private bool IsCollapsed = false;

    private void ToggleSidebar()
    {
        IsCollapsed = !IsCollapsed;
    }
}