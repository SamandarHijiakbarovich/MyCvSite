@page "/"
@inject NavigationManager Navigation

<PageTitle>Samandar Mamasoatov | Portfolio</PageTitle>

<div class="hero-wrapper">
    <div class="cyber-dots"></div>
    <div class="blob-glow"></div>
    <div class="ambient-light"></div>

    <section class="container hero-container">
        <div class="row align-items-center min-vh-100 py-5">

            <div class="col-lg-7 order-2 order-lg-1">
                <div class="content-box animate__animated animate__fadeInLeft">
                    <div class="status-badge mb-3">
                        <span class="pulse-dot"></span> Online va Loyihalar uchun ochiq
                    </div>

                    <h1 class="glitch-title mb-3">
                        Salom, men <br />
                        <span class="highlight-gradient">Samandar Mamasoatov</span>
                    </h1>

                    <h2 class="role-text mb-4">
                        <i class="fas fa-user-shield me-2 text-primary"></i> .NET Backend Muhandisi & <span class="sec-text">Security Researcher</span>
                    </h2>

                    <p class="hero-bio mb-5">
                        Men <strong>C# / .NET</strong> ekotizimida yuqori yuklamalarga chidamli tizimlar quraman.
                        Mening yondashuvim: <strong>Kod faqat ishlashi emas, balki buzilmas bo'lishi kerak.</strong>
                        Har bir arxitekturani kiberxavfsizlik prizmasidan o'tkazaman.
                    </p>

                    <div class="stats-row mb-5">
                        <div class="mini-stat">
                            <span class="stat-val">2+</span>
                            <span class="stat-lab">Yillik Tajriba</span>
                        </div>
                        <div class="divider"></div>
                        <div class="mini-stat">
                            <span class="stat-val">15+</span>
                            <span class="stat-lab">Loyihalar</span>
                        </div>
                        <div class="divider"></div>
                        <div class="mini-stat">
                            <span class="stat-val">10+</span>
                            <span class="stat-lab">Mijozlar</span>
                        </div>
                    </div>

                    <div class="cta-group">
                        <button class="btn-cyber-primary" @onclick='() => Navigation.NavigateTo("/projects")'>
                            <div class="btn-inner">
                                <i class="fas fa-code"></i> <span>PORTFOLIO</span>
                            </div>
                            <div class="btn-glow"></div>
                        </button>

                        <button class="btn-cyber-outline" @onclick='() => Navigation.NavigateTo("/contact")'>
                            <div class="btn-inner">
                                <i class="fas fa-envelope"></i> <span>BOG'LANISH</span>
                            </div>
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-lg-5 order-1 order-lg-2 text-center position-relative">
                <div class="avatar-portal animate__animated animate__zoomIn">
                    <div class="portal-ring ring-1"></div>
                    <div class="portal-ring ring-2"></div>
                    <div class="main-photo-wrapper">
                        <img src="images/my-photo.jpg" alt="Samandar" class="main-photo"
                             onerror="this.src='https://ui-avatars.com/api/?name=Samandar&background=6366f1&color=fff&size=512'" />
                    </div>

                    <div class="floating-icon fi-1" title=".NET Core"><i class="fab fa-microsoft"></i></div>
                    <div class="floating-icon fi-2" title="Security"><i class="fas fa-shield-alt"></i></div>
                    <div class="floating-icon fi-3" title="SQL"><i class="fas fa-database"></i></div>
                </div>

                <div class="social-panel mt-5 animate__animated animate__fadeInUp animate__delay-1s">
                    <a href="https://github.com/samandarHijiakbarovich" target="_blank" class="social-link"><i class="fab fa-github"></i></a>
                    <a href="https://linkedin.com/in/samandar" target="_blank" class="social-link"><i class="fab fa-linkedin-in"></i></a>
                    <a href="https://t.me/LinuxInstructor" target="_blank" class="social-link"><i class="fab fa-telegram-plane"></i></a>
                </div>
            </div>

        </div>
    </section>
</div>

<style>
    :root {
        --cyber-blue: #3b82f6;
        --cyber-purple: #8b5cf6;
        --cyber-pink: #ec4899;
        --dark-bg: #0f172a;
    }

    .hero-wrapper {
        min-height: 100vh;
        background-color: var(--dark-bg);
        position: relative;
        overflow: hidden;
        color: #f8fafc;
        display: flex;
        align-items: center;
        z-index: 1;
    }

    /* Fon elementlari - pointer-events: none tugmalarni bosishga xalaqit bermasligini ta'minlaydi */
    .cyber-dots {
        position: absolute;
        inset: 0;
        background-image: radial-gradient(rgba(59, 130, 246, 0.1) 1px, transparent 1px);
        background-size: 30px 30px;
        z-index: -1;
        pointer-events: none;
    }

    .blob-glow {
        position: absolute;
        top: 20%;
        left: 10%;
        width: 600px;
        height: 600px;
        background: radial-gradient(circle, rgba(139, 92, 246, 0.1) 0%, transparent 70%);
        filter: blur(80px);
        z-index: -1;
        pointer-events: none;
        animation: moveBlob 20s infinite alternate;
    }

    .ambient-light {
        position: absolute;
        bottom: -10%;
        right: -10%;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, rgba(236, 72, 153, 0.05) 0%, transparent 70%);
        z-index: -1;
        pointer-events: none;
    }

    /* Status Badge */
    .status-badge {
        display: inline-flex;
        align-items: center;
        background: rgba(30, 41, 59, 0.7);
        padding: 6px 16px;
        border-radius: 50px;
        border: 1px solid rgba(255,255,255,0.1);
        font-size: 0.85rem;
        backdrop-filter: blur(5px);
    }

    .pulse-dot {
        width: 8px;
        height: 8px;
        background: #10b981;
        border-radius: 50%;
        margin-right: 10px;
        box-shadow: 0 0 12px #10b981;
        animation: pulse 2s infinite;
    }

    /* Sarlavhalar */
    .glitch-title {
        font-size: 3.8rem;
        font-weight: 900;
        line-height: 1.1;
        letter-spacing: -1px;
    }

    .highlight-gradient {
        background: linear-gradient(90deg, var(--cyber-blue), var(--cyber-purple));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        filter: drop-shadow(0 0 10px rgba(59, 130, 246, 0.3));
    }

    .role-text {
        font-size: 1.3rem;
        color: #cbd5e1;
        font-weight: 500;
    }

    .sec-text {
        color: var(--cyber-pink);
        font-weight: 700;
    }

    .hero-bio {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #94a3b8;
        max-width: 600px;
    }

    /* Statistika qatori */
    .stats-row {
        display: flex;
        align-items: center;
        gap: 30px;
        background: rgba(255,255,255,0.03);
        padding: 20px 30px;
        border-radius: 24px;
        width: fit-content;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255,255,255,0.05);
    }

    .stat-val {
        font-size: 1.8rem;
        font-weight: 800;
        color: #fff;
        display: block;
    }

    .stat-lab {
        font-size: 0.75rem;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }

    .divider {
        width: 1px;
        height: 40px;
        background: rgba(255,255,255,0.1);
    }

    /* TUGMALAR (ASOSIY TUZATISH) */
    .cta-group {
        display: flex;
        gap: 20px;
        position: relative;
        z-index: 100;
    }

    .btn-cyber-primary, .btn-cyber-outline {
        position: relative;
        background: transparent;
        border: none;
        padding: 0;
        cursor: pointer;
        transition: 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .btn-inner {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 16px 35px;
        border-radius: 14px;
        font-weight: 700;
        letter-spacing: 1px;
        color: white;
        position: relative;
        z-index: 2;
    }

    .btn-cyber-primary .btn-inner {
        background: linear-gradient(45deg, var(--cyber-blue), var(--cyber-purple));
    }

    .btn-cyber-primary:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 10px 25px rgba(59, 130, 246, 0.4);
    }

    .btn-cyber-outline .btn-inner {
        background: var(--dark-bg);
        border: 2px solid rgba(139, 92, 246, 0.5);
    }

    .btn-cyber-outline:hover .btn-inner {
        border-color: var(--cyber-purple);
        background: rgba(139, 92, 246, 0.1);
    }

    .btn-cyber-outline:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(139, 92, 246, 0.2);
    }

    /* Avatar Portal */
    .avatar-portal {
        position: relative;
        width: 320px;
        height: 320px;
        margin: 0 auto;
    }

    .main-photo-wrapper {
        width: 100%;
        height: 100%;
        border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
        overflow: hidden;
        border: 4px solid rgba(59, 130, 246, 0.2);
        z-index: 5;
        position: relative;
        animation: morph 8s ease-in-out infinite;
        box-shadow: 0 0 50px rgba(59, 130, 246, 0.15);
    }

    .main-photo {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .portal-ring {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border-radius: 50%;
        border: 2px dashed rgba(139, 92, 246, 0.3);
    }

    .ring-1 {
        width: 120%;
        height: 120%;
        animation: spin 20s linear infinite;
    }

    .ring-2 {
        width: 140%;
        height: 140%;
        animation: spin 30s linear infinite reverse;
    }

    /* Floating Icons */
    .floating-icon {
        position: absolute;
        width: 55px;
        height: 55px;
        background: rgba(30, 41, 59, 0.9);
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.6rem;
        color: var(--cyber-blue);
        border: 1px solid rgba(255,255,255,0.1);
        backdrop-filter: blur(10px);
        z-index: 10;
        animation: float 4s ease-in-out infinite;
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }

    .fi-1 {
        top: -10px;
        right: -10px;
        color: #0078d4;
    }

    .fi-2 {
        bottom: 15%;
        left: -30px;
        color: var(--cyber-pink);
    }

    .fi-3 {
        bottom: -10px;
        right: 20%;
        color: #f59e0b;
    }

    /* Social Links */
    .social-link {
        display: inline-flex;
        width: 55px;
        height: 55px;
        background: rgba(255,255,255,0.05);
        margin: 0 10px;
        align-items: center;
        justify-content: center;
        color: #fff;
        text-decoration: none;
        border-radius: 14px;
        font-size: 1.4rem;
        transition: 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid rgba(255,255,255,0.05);
    }

        .social-link:hover {
            background: var(--cyber-blue);
            transform: translateY(-10px) rotate(8deg);
            color: white;
            box-shadow: 0 15px 30px rgba(59, 130, 246, 0.3);
        }

    /* Keyframes */
    @@keyframes morph {
        0%, 100% {
            border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
        }

        50% {
            border-radius: 50% 50% 33% 67% / 55% 27% 73% 45%;
        }
    }

    @@keyframes spin {
        from {
            transform: translate(-50%, -50%) rotate(0deg);
        }

        to {
            transform: translate(-50%, -50%) rotate(360deg);
        }
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
            transform: scale(1);
        }

        50% {
            opacity: 0.5;
            transform: scale(1.4);
        }
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-20px);
        }
    }

    @@keyframes moveBlob {
        from {
            transform: translate(0,0);
        }

        to {
            transform: translate(120px, 60px);
        }
    }

    /* Responsive Design */
    @@media (max-width: 991px) {
        .hero-container {
            text-align: center;
        }

        .hero-bio, .stats-row, .cta-group {
            margin-left: auto;
            margin-right: auto;
            justify-content: center;
        }

        .glitch-title {
            font-size: 2.8rem;
        }

        .avatar-portal {
            width: 260px;
            height: 260px;
            margin-bottom: 40px;
        }

        .cta-group {
            flex-direction: column;
        }

        .btn-cyber-primary, .btn-cyber-outline {
            width: 100%;
        }
    }
</style>