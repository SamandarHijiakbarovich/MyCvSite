@page "/about"
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager

<PageTitle>Men haqimda | Samandar Mamasoatov</PageTitle>

<div class="about-wrapper">
    @* === BACKDROP DECORATION === *@
    <div class="bg-glow"></div>
    <div class="bg-grid"></div>

    <div class="container py-5">
        @* === HERO SECTION === *@
        <div class="row align-items-center mb-5 hero-row">
            <div class="col-lg-7 order-2 order-lg-1">
                <div class="cyber-badge animate-fade-in">
                    <span class="pulse-icon"></span>
                    SECURE BACKEND DEVELOPER
                </div>
                <h1 class="main-title mb-3">
                    Samandar <span class="gradient-text">Mamasoatov</span>
                </h1>
                <p class="lead-text mb-4">
                    Backend muhandisligi va <span class="highlight">Kiberxavfsizlik</span> chorrahasida innovatsion yechimlar yaratuvchi mutaxassis.
                </p>
                <p class="description mb-5">
                    Men faqat kod yozmayman, men <strong>xavfsiz raqamli infratuzilmalar</strong> quraman.
                    .NET ekotizimida murakkab backend tizimlarni loyihalash va ularni tashqi hujumlardan
                    himoyalash — mening asosiy missiyamdir.
                </p>

                <div class="action-buttons d-flex gap-3">
                    @* CV yuklash uchun to'g'ridan-to'g'ri download tegi bilan *@
                    <a href="files/SamandarResume.pdf" download="SamandarResume.pdf" class="btn-cyber-primary text-decoration-none">
                        <i class="fas fa-file-download"></i> CV YUKLAB OLISH
                    </a>

                    @* Bog'lanish uchun NavigationManager orqali o'tish *@
                    <button class="btn-cyber-outline" @onclick='() => Navigation.NavigateTo("/contact")'>
                        <i class="fas fa-terminal"></i> BOG'LANISH
                    </button>
                </div>
            </div>

            <div class="col-lg-5 order-1 order-lg-2 mb-5 mb-lg-0 text-center">
                <div class="image-container">
                    <div class="hex-border">
                        <div class="image-frame">
                            <img src="images/my-photo.jpg" alt="Samandar"
                                 onerror="this.src='https://ui-avatars.com/api/?name=Samandar+Mamasoatov&background=6366f1&color=fff&size=512'" />
                        </div>
                    </div>
                    @* Floating Icons *@
                    <div class="float-tag t-1"><i class="fas fa-lock"></i> SSL</div>
                    <div class="float-tag t-2"><i class="fas fa-key"></i> OAuth2</div>
                    <div class="float-tag t-3"><i class="fas fa-bug"></i> Pentest</div>
                </div>
            </div>
        </div>

        @* === STATS SECTION === *@
        <div class="row mb-5">
            <div class="col-12">
                <div class="stats-grid">
                    <div class="stat-card">
                        <h3 class="stat-num">2+</h3>
                        <p class="stat-desc">Yillik Tajriba</p>
                    </div>
                    <div class="stat-card">
                        <h3 class="stat-num">15+</h3>
                        <p class="stat-desc">Xavfsiz Loyihalar</p>
                    </div>
                    <div class="stat-card">
                        <h3 class="stat-num">100%</h3>
                        <p class="stat-desc">Uptime & Security</p>
                    </div>
                </div>
            </div>
        </div>

        @* === SKILLS SECTION === *@
        <div class="row g-4 mt-4">
            <div class="col-md-6">
                <div class="skill-group-card">
                    <div class="card-header-cyber">
                        <i class="fas fa-server"></i> BACKEND ARCHITECTURE
                    </div>
                    <div class="skill-body">
                        @foreach (var skill in BackendSkills)
                        {
                            <div class="skill-box">
                                <div class="d-flex justify-content-between">
                                    <span>@skill.Name</span>
                                    <span>@skill.Percent%</span>
                                </div>
                                <div class="progress-container">
                                    <div class="progress-fill" style="width: @(skill.Percent)%"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="skill-group-card">
                    <div class="card-header-cyber">
                        <i class="fas fa-user-shield"></i> CYBER SECURITY SKILLS
                    </div>
                    <div class="skill-body">
                        @foreach (var skill in SecuritySkills)
                        {
                            <div class="skill-box">
                                <div class="d-flex justify-content-between">
                                    <span>@skill.Name</span>
                                    <span>@skill.Percent%</span>
                                </div>
                                <div class="progress-container security">
                                    <div class="progress-fill" style="width: @(skill.Percent)%"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .about-wrapper {
        position: relative;
        overflow: hidden;
        min-height: 100vh;
        color: #fff;
        padding-top: 40px;
    }

    /* Background decoration */
    .bg-glow {
        position: absolute;
        top: 10%;
        right: 10%;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, rgba(99,102,241,0.15) 0%, transparent 70%);
        z-index: -1;
    }

    .bg-grid {
        position: absolute;
        inset: 0;
        background-image: linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
        background-size: 50px 50px;
        z-index: -1;
    }

    /* Titles */
    .gradient-text {
        background: linear-gradient(90deg, #6366f1, #a855f7);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .main-title {
        font-size: 3.5rem;
        font-weight: 800;
    }

    .lead-text {
        font-size: 1.4rem;
        color: #cbd5e1;
    }

    .highlight {
        color: #a855f7;
        font-weight: 600;
    }

    /* Cyber Badge */
    .cyber-badge {
        display: inline-flex;
        align-items: center;
        background: rgba(99, 102, 241, 0.1);
        border: 1px solid rgba(99, 102, 241, 0.3);
        padding: 6px 16px;
        border-radius: 50px;
        color: #818cf8;
        font-weight: 600;
        font-size: 0.85rem;
        margin-bottom: 1.5rem;
    }

    .pulse-icon {
        width: 8px;
        height: 8px;
        background: #818cf8;
        border-radius: 50%;
        margin-right: 10px;
        box-shadow: 0 0 10px #818cf8;
        animation: pulse 2s infinite;
    }

    /* Buttons */
    .btn-cyber-primary {
        background: linear-gradient(135deg, #6366f1, #a855f7);
        border: none;
        padding: 14px 28px;
        border-radius: 12px;
        color: white;
        font-weight: 700;
        transition: 0.3s;
    }

        .btn-cyber-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(99, 102, 241, 0.4);
        }

    .btn-cyber-outline {
        background: transparent;
        border: 2px solid rgba(168, 85, 247, 0.5);
        padding: 14px 28px;
        border-radius: 12px;
        color: white;
        font-weight: 700;
        transition: 0.3s;
    }

        .btn-cyber-outline:hover {
            background: rgba(168, 85, 247, 0.1);
            border-color: #a855f7;
        }

    /* Image Container */
    .image-container {
        position: relative;
        display: inline-block;
    }

    .hex-border {
        padding: 10px;
        background: linear-gradient(45deg, #6366f1, #a855f7);
        clip-path: polygon(25% 0%, 75% 0%, 100% 50%, 75% 100%, 25% 100%, 0% 50%);
    }

    .image-frame {
        background: #0f172a;
        clip-path: polygon(25% 0%, 75% 0%, 100% 50%, 75% 100%, 25% 100%, 0% 50%);
        width: 300px;
        height: 340px;
        overflow: hidden;
    }

        .image-frame img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .float-tag {
        position: absolute;
        background: rgba(15, 23, 42, 0.8);
        border: 1px solid rgba(255,255,255,0.1);
        padding: 5px 12px;
        border-radius: 8px;
        font-size: 0.8rem;
        backdrop-filter: blur(5px);
    }

    .t-1 {
        top: 10%;
        right: -20px;
    }

    .t-2 {
        bottom: 20%;
        left: -30px;
    }

    .t-3 {
        bottom: 0;
        right: 20px;
        color: #ef4444;
    }

    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        background: rgba(30, 41, 59, 0.5);
        padding: 30px;
        border-radius: 24px;
        border: 1px solid rgba(255,255,255,0.05);
        backdrop-filter: blur(10px);
    }

    .stat-num {
        font-size: 2.5rem;
        font-weight: 800;
        color: #6366f1;
        margin: 0;
    }

    .stat-desc {
        color: #94a3b8;
        margin: 0;
    }

    /* Skill Cards */
    .skill-group-card {
        background: rgba(30, 41, 59, 0.4);
        border-radius: 20px;
        border: 1px solid rgba(255,255,255,0.05);
        overflow: hidden;
    }

    .card-header-cyber {
        background: rgba(255,255,255,0.03);
        padding: 15px 20px;
        font-weight: 700;
        letter-spacing: 1px;
        border-bottom: 1px solid rgba(255,255,255,0.05);
        color: #cbd5e1;
    }

    .skill-body {
        padding: 25px;
    }

    .skill-box {
        margin-bottom: 18px;
    }

    .progress-container {
        height: 8px;
        background: #0f172a;
        border-radius: 10px;
        margin-top: 8px;
        overflow: hidden;
    }

    .progress-fill {
        height: 100%;
        background: var(--accent-gradient, linear-gradient(90deg, #6366f1, #a855f7));
        border-radius: 10px;
    }

    .security .progress-fill {
        background: linear-gradient(90deg, #a855f7, #ec4899);
    }

    @@keyframes pulse {
        0% {
            opacity: 0.5;
        }

        50% {
            opacity: 1;
            transform: scale(1.2);
        }

        100% {
            opacity: 0.5;
        }
    }

    @@media (max-width: 768px) {
        .main-title {
            font-size: 2.5rem;
        }

        .stats-grid {
            grid-template-columns: 1fr;
            text-align: center;
        }
    }
</style>

@code {
    private List<SkillModel> BackendSkills = new() {
        new("C# & .NET Core Architecture", 95),
        new("Microservices & Web API", 92),
        new("SQL & Entity Framework Performance", 88),
        new("Redis & Message Brokers", 75)
    };

    private List<SkillModel> SecuritySkills = new() {
        new("OAuth2 & JWT Implementation", 94),
        new("OWASP Top 10 Security", 85),
        new("Data Encryption & Hashing", 90),
        new("Penetration Testing (Basics)", 70)
    };

    private async Task DownloadCV() => await JSRuntime.InvokeVoidAsync("open", "files/resume.pdf", "_blank");

    private async Task ScrollToContact() => await JSRuntime.InvokeVoidAsync("eval", "window.scrollTo({top: document.body.scrollHeight, behavior: 'smooth'})");

    public record SkillModel(string Name, int Percent);
}

@inject NavigationManager Navigation

@inject NavigationManager Navigation

<div class="action-buttons d-flex gap-3">
    <a href="files/SamandarResume.pdf" download class="btn-cyber-primary text-decoration-none" style="cursor: pointer;">
        <i class="fas fa-shield-alt me-2"></i> CV YUKLAB OLISH
    </a>

    <button class="btn-cyber-outline" @onclick="GoToContact">
        <i class="fas fa-terminal me-2"></i> BOG'LANISH
    </button>
</div>

@code {
    // Bog'lanish sahifasiga o'tkazish funksiyasi
    private void GoToContact()
    {
        Navigation.NavigateTo("/contact");
    }
}