@page "/contact"
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations
@inject IJSRuntime JSRuntime

<PageTitle>Bog'lanish | Samandar Mamasoatov</PageTitle>

<div class="contact-wrapper">
    <div class="cyber-grid"></div>
    <div class="glow-orb"></div>

    <div class="container py-5">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center animate__animated animate__fadeInDown">
                <div class="security-badge mb-3">
                    <i class="fas fa-user-shield me-2"></i> END-TO-END ENCRYPTED COMMUNICATION
                </div>
                <h1 class="contact-title">Men bilan <span class="gradient-text">Bog'laning</span></h1>
                <p class="contact-subtitle">Loyiha takliflaringiz yoki xavfsizlik bo'yicha savollaringiz bormi? Quyidagi forma orqali xabar qoldiring.</p>
            </div>
        </div>

        <div class="row g-5">
            <div class="col-lg-4 animate__animated animate__fadeInLeft">
                <div class="info-sidebar">
                    <div class="info-card">
                        <div class="info-icon-box"><i class="fas fa-at"></i></div>
                        <div>
                            <h4>Email</h4>
                            <a href="mailto:mamasoatovsamandar@gmail.com">mamasoatovsamandar@gmail.com</a>
                        </div>
                    </div>

                    <div class="info-card">
                        <div class="info-icon-box"><i class="fab fa-telegram-plane"></i></div>
                        <div>
                            <h4>Telegram</h4>
                            <a href="https://t.me/LinuxInstructor" target="_blank">@@LinuxInstructor</a>
                        </div>
                    </div>

                    <div class="info-card">
                        <div class="info-icon-box"><i class="fas fa-shield-alt"></i></div>
                        <div>
                            <h4>Kiberxavfsizlik</h4>
                            <span>Vulnerability Assessment & Pentesting</span>
                        </div>
                    </div>

                    <div class="social-mini-box mt-4">
                        <a href="#"><i class="fab fa-github"></i></a>
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
            </div>

            <div class="col-lg-8 animate__animated animate__fadeInRight">
                <div class="cyber-form-container">
                    <EditForm Model="@contactModel" OnValidSubmit="@HandleValidSubmit">
                        <DataAnnotationsValidator />

                        @if (showSuccess)
                        {
                            <div class="success-notify animate__animated animate__flipInX">
                                <div class="icon-circle"><i class="fas fa-check"></i></div>
                                <div>
                                    <h5>Xabar muvaffaqiyatli yuborildi!</h5>
                                    <p>Tez orada xavfsiz kanal orqali sizga javob beraman.</p>
                                </div>
                            </div>
                        }

                        <div class="row g-4">
                            <div class="col-md-6 group">
                                <label class="cyber-label">Ismingiz</label>
                                <div class="input-wrapper">
                                    <i class="fas fa-user input-icon"></i>
                                    <InputText @bind-Value="contactModel.Name" class="cyber-input" placeholder="Samandar..." />
                                </div>
                                <ValidationMessage For="() => contactModel.Name" class="cyber-error" />
                            </div>

                            <div class="col-md-6 group">
                                <label class="cyber-label">Email manzilingiz</label>
                                <div class="input-wrapper">
                                    <i class="fas fa-envelope input-icon"></i>
                                    <InputText @bind-Value="contactModel.Email" class="cyber-input" placeholder="example@mail.com" />
                                </div>
                                <ValidationMessage For="() => contactModel.Email" class="cyber-error" />
                            </div>

                            <div class="col-12 group">
                                <label class="cyber-label">Mavzu</label>
                                <div class="input-wrapper">
                                    <i class="fas fa-tag input-icon"></i>
                                    <InputText @bind-Value="contactModel.Subject" class="cyber-input" placeholder="Loyiha taklifi / Maslahat" />
                                </div>
                            </div>

                            <div class="col-12 group">
                                <label class="cyber-label">Xabaringiz</label>
                                <div class="input-wrapper">
                                    <InputTextArea @bind-Value="contactModel.Message" class="cyber-input textarea" rows="5" placeholder="Xabaringizni bu yerga yozing..." />
                                </div>
                                <ValidationMessage For="() => contactModel.Message" class="cyber-error" />
                            </div>

                            <div class="col-12">
                                <button type="submit" class="cyber-submit-btn" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span> <span>PROCCESSING...</span>
                                    }
                                    else
                                    {
                                        <span><i class="fas fa-paper-plane me-2"></i> XABARNI YUBORISH</span>
                                    }
                                </button>
                            </div>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .contact-wrapper {
        min-height: 100vh;
        background: #0f172a;
        position: relative;
        overflow: hidden;
        color: #fff;
        padding-top: 60px;
    }

    .cyber-grid {
        position: absolute;
        inset: 0;
        background-image: linear-gradient(rgba(99, 102, 241, 0.05) 1px, transparent 1px), linear-gradient(90deg, rgba(99, 102, 241, 0.05) 1px, transparent 1px);
        background-size: 40px 40px;
        z-index: 0;
    }

    .glow-orb {
        position: absolute;
        bottom: -10%;
        right: -5%;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(99, 102, 241, 0.1) 0%, transparent 70%);
        z-index: 0;
    }

    /* Titles & Badges */
    .security-badge {
        display: inline-block;
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
        border: 1px solid rgba(16, 185, 129, 0.2);
        padding: 5px 15px;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .contact-title {
        font-size: 3rem;
        font-weight: 800;
    }

    .gradient-text {
        background: linear-gradient(90deg, #6366f1, #a855f7);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .contact-subtitle {
        color: #94a3b8;
        font-size: 1.1rem;
    }

    /* Sidebar Cards */
    .info-sidebar {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .info-card {
        background: rgba(30, 41, 59, 0.5);
        border: 1px solid rgba(255,255,255,0.05);
        padding: 20px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        gap: 15px;
        backdrop-filter: blur(10px);
        transition: 0.3s;
    }

        .info-card:hover {
            border-color: #6366f1;
            transform: translateX(10px);
        }

    .info-icon-box {
        width: 50px;
        height: 50px;
        background: rgba(99, 102, 241, 0.1);
        color: #818cf8;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    .info-card h4 {
        font-size: 1rem;
        margin-bottom: 2px;
        color: #fff;
    }

    .info-card a, .info-card span {
        font-size: 0.9rem;
        color: #94a3b8;
        text-decoration: none;
    }

    /* Form Container */
    .cyber-form-container {
        background: rgba(30, 41, 59, 0.4);
        border: 1px solid rgba(255,255,255,0.05);
        padding: 40px;
        border-radius: 24px;
        backdrop-filter: blur(15px);
    }

    .cyber-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #cbd5e1;
        font-size: 0.9rem;
    }

    .input-wrapper {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #64748b;
    }

    .cyber-input {
        width: 100%;
        background: rgba(15, 23, 42, 0.6);
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 12px;
        padding: 12px 15px 12px 45px;
        color: #fff;
        transition: 0.3s;
    }

    .textarea {
        padding-left: 15px;
    }

    .cyber-input:focus {
        outline: none;
        border-color: #6366f1;
        box-shadow: 0 0 15px rgba(99, 102, 241, 0.2);
    }

    .cyber-error {
        color: #ef4444;
        font-size: 0.8rem;
        margin-top: 5px;
        display: block;
    }

    .cyber-submit-btn {
        width: 100%;
        padding: 16px;
        border-radius: 12px;
        border: none;
        background: linear-gradient(90deg, #6366f1, #a855f7);
        color: #fff;
        font-weight: 700;
        letter-spacing: 1px;
        transition: 0.3s;
        margin-top: 10px;
    }

        .cyber-submit-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(99, 102, 241, 0.3);
        }

        .cyber-submit-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

    /* Success Notify */
    .success-notify {
        background: rgba(16, 185, 129, 0.1);
        border: 1px solid #10b981;
        border-radius: 12px;
        padding: 20px;
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 30px;
    }

    .icon-circle {
        width: 40px;
        height: 40px;
        background: #10b981;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
    }

    @@media (max-width: 768px) {
        .contact-title {
            font-size: 2.2rem;
        }

        .cyber-form-container {
            padding: 25px;
        }
    }
</style>

@code {
    private ContactModel contactModel = new ContactModel();
    private bool isSubmitting = false;
    private bool showSuccess = false;

    private async Task HandleValidSubmit()
    {
        if (isSubmitting) return;
        isSubmitting = true;

        try
        {
            // Backend'ga yuborish simulyatsiyasi
            await Task.Delay(1500);
            showSuccess = true;
            contactModel = new ContactModel();
        }
        finally
        {
            isSubmitting = false;
        }
    }

    public class ContactModel
    {
        [Required(ErrorMessage = "Ismingizni kiriting")]
        public string Name { get; set; }

        [Required(ErrorMessage = "Email manzilingizni kiriting")]
        [EmailAddress(ErrorMessage = "Noto'g'ri email formati")]
        public string Email { get; set; }

        public string Subject { get; set; }

        [Required(ErrorMessage = "Xabar mazmunini kiriting")]
        [MinLength(10, ErrorMessage = "Xabar juda qisqa")]
        public string Message { get; set; }
    }
}