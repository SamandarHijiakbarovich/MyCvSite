@using Microsoft.AspNetCore.Components

<div class="project-card">
    <img src="@ImageUrl" alt="@Title project image" />

    <div class="card-body">
        <h3>@Title</h3>
        <p>@Description</p>

        <div class="tech-tags">
            @foreach (var tech in Technologies)
            {
                <span>@tech</span>
            }
        </div>

        @if (!string.IsNullOrWhiteSpace(Link))
        {
            <a href="@Link" target="_blank" class="btn btn-primary mt-3">View Project</a>
        }
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Description { get; set; }
    [Parameter] public List<string> Technologies { get; set; } = new();
    [Parameter] public string Link { get; set; }
    [Parameter] public string ImageUrl { get; set; } = "images/default-project.jpg";
}
