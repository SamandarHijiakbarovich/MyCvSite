@using MyCvSite.Data

<div class="project-card shadow-sm h-100">
    <div class="project-img-wrapper">
        <img src="@(string.IsNullOrEmpty(Project.ImageUrl) ? "images/default-project.jpg" : Project.ImageUrl)"
             alt="@Project.Title project image"
             class="img-fluid" />
    </div>

    <div class="card-body p-4">
        <h3 class="fw-bold h5">@Project.Title</h3>
        <p class="text-muted small">@Project.Description</p>

        <div class="tech-tags d-flex flex-wrap gap-2 mb-3">
            @foreach (var tech in Project.Technologies)
            {
                <span class="badge bg-light text-primary border">@tech</span>
            }
        </div>

        <div class="d-flex gap-2">
            @if (!string.IsNullOrWhiteSpace(Project.GithubUrl))
            {
                <a href="@Project.GithubUrl" target="_blank" class="btn btn-sm btn-outline-dark flex-grow-1">
                    <i class="fab fa-github me-1"></i> GitHub
                </a>
            }
            @if (!string.IsNullOrWhiteSpace(Project.LiveDemoUrl))
            {
                <a href="@Project.LiveDemoUrl" target="_blank" class="btn btn-sm btn-primary flex-grow-1">
                    <i class="fas fa-external-link-alt me-1"></i> Live Demo
                </a>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public ProjectModel Project { get; set; } = new();
}